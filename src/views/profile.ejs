<%- include partials/header %>
<%- include partials/navbar %>

<h1>WOW, you have a neat profile, <%=user.name%>!</h1>
<br>
<h2>Email: <%=user.email%></h2>
<h2>ID: <%=user.id%></h2>
<h2>Join Date: <%=user.join_date%></h2>

<% if(edit) { %>
  <br>
  <h3>Edit Profile</h3>
  <form action="<%= user.id %>" method="POST" >
    <label for="name">Name: </label>
    <input type="text" name="name" value="<%=user.name%>">
    <br>
    <button type="submit" name="save-submit">Save Changes</button>
  </form>
<% } else { %>
  <h2>Name: <%=user.name%></h2>
  <form action="edit/<%= user.id %>" method="GET" >
    <button type="submit" name="edit-submit">Edit Profile</button>
  </form>
<% } %>

<div>
  <div class="review-feed">
    <h1>Reviews</h1>
    <% reviews.forEach((review) => { %>
      <a href="/review/<%= review.id %>"><h2><%=review.album_id%></h2></a>
      <br>
      <span>Review Date: <%=review.date_created%></span>
      <br>
      <span>Description: <%=review.description%></span>
      <br></br>
      <form action="/review/edit/<%= review.id %>" method="GET" >
        <button type="submit" name="edit-submit" class="fa fa-pencil"></button>
      </form>
      <button class="fa fa-trash"></button>
    <% }) %>
  </div>
</div>

<% include partials/footer %>
